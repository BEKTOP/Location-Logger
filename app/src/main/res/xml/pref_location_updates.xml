<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/location_tracking_key"
        android:title="@string/pref_title_location_tracking_enabled" />

    <ListPreference
        android:defaultValue="30"
        android:entries="@array/pref_update_frequency_titles"
        android:entryValues="@array/pref_update_frequency_values"
        android:key="@string/location_frequency_key"
        android:dependency="@string/location_tracking_key"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_update_frequency" />



</PreferenceScreen>
